[Unit]
Description=Media Stream Service
DefaultDependencies=no
After=multi-user.target network-online.target pulseaudio.service
Wants=network-online.target pulseaudio.service


[Service]
Type=simple
ExecStart=/opt/portal/streamer.sh
EnvironmentFile=/opt/portal/vars.env
Restart=always
RestartSec=5s
TimeoutStopSec=1
KillMode=mixed
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target